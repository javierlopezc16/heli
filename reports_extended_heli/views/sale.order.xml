                <field name="saving_uf" string="Ahorro" attrs="{'readonly': [('state', 'in', ['sale', 'done', 'cancel'])]}"/>
                <field name="mortgage_credit_uf" string="CrÃ©dito Hipotecario" attrs="{'readonly': [('state', 'in', ['sale', 'done', 'cancel'])]}"/>
